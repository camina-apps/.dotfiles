[core]
    pager = delta
    excludesfile = /Users/carmen/.gitignore_global       
    editor = nvim
[color]
    ui = auto
[alias]
    l = log --pretty=custom
    compare = diff --cached # view the changes you staged for the next commit relative to HEAD
    unstage = reset --soft HEAD^
    amend = commit --amend -m
    cpick = cherry-pick
    cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
    loggraph = log --graph --pretty=custom
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[credential "https://github.com"]
    helper = !/opt/homebrew/bin/gh auth git-credential
[pull]
    rebase = true
[init]
    defaultBranch = main
[gpg]
    program = /usr/local/bin/gpg
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true # use n and N to move between diff sessions
    side-by-side = true
    line-numbers = true
    theme="DarkNeo"
[merge]
    conflictstyle = diff3
    tool = opendiff
[diff]
    colorMoved = default
[push]
    autoSetupRemote = true
    followTags = true
[pretty]
    custom = "%C(magenta)%h %C(green)%s %C(cyan)%d  %n%C(yellow)%an  %C(yellow)%ar%n"
    #                     │        │            │        │               └─ date relativ
    #                     │        │            │        └─ author name
    #                     │        │            └─ decorations(branch, heads or tags)
    #                     │        └─ message
    #                     └─ hash (abbreviated)

[user]
    #configered in `~/.gitconfig.local`
[include]
    # Load local configs.
    # https://git-scm.com/docs/git-config#_includes
    #
    # [!] The following needs to remain at the end of this file in
    #     order to allow any of the above configs to be overwritten
    #     by the local ones

    path = ~/.gitconfig.local
