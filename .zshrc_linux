# Created by Zap installer
[ -f "${XDG_DATA_HOME:-$HOME/.local/share}/zap/zap.zsh" ] && source "${XDG_DATA_HOME:-$HOME/.local/share}/zap/zap.zsh"
plug "zsh-users/zsh-autosuggestions"
plug "zap-zsh/supercharge"
plug "zap-zsh/exa"
plug "zap-zsh/zap-prompt"
plug "zsh-users/zsh-syntax-highlighting"
plug "chivalryq/git-alias"
plug "wintermi/zsh-starship"

# Load and initialise completion system
autoload -Uz compinit
compinit

source $HOME/.zsh-vi-mode/zsh-vi-mode.plugin.zsh

export EDITOR=lvim
export VISUAL=lvim
export LESS='-R --use-color -Dd+r$Du+b$' # colored man-pages
export QEMU_AUDIO_DRV=none # disable audio backend for all android emulators
export BAT_THEME="Catppuccin-frappe"

alias zshconfig="lvim ~/.dotfiles/.zshrc_linux"
alias vimconfig="lvim ~/.dotfiles/lvim/config.lua"
alias gitconfig="lvim ~/.gitconfig"
alias adb='~/Library/Android/sdk/platform-tools/adb' # FIXME MacOS path
alias vim='lvim' 
alias mv='mv -i'
alias cp='cp -i'
alias grep='grep --color=auto '
alias rm='trash'
alias rmdir='rm -rf'
alias cat='batcat'
alias adb-kill-emulator='adb -s emulator-5554 emu kill'
alias adb-restart='adb kill-server; adb start-server'
alias gw="./gradlew"
alias trim="awk '{\$1=\$1};1'"
alias ...="cd ../.."
alias lg='lazygit'
alias lg-upgrade="LAZYGIT_VERSION=$(curl -s "https://api.github.com/repos/jesseduffield/lazygit/releases/latest" | grep -Po '"tag_name": "v\K[^"]*')
curl -Lo lazygit.tar.gz "https://github.com/jesseduffield/lazygit/releases/latest/download/lazygit_${LAZYGIT_VERSION}_Linux_x86_64.tar.gz"
tar xf lazygit.tar.gz lazygit
sudo install lazygit /usr/local/bin"

function take {
  mkdir -p $1
  cd $1
}

alias work="timer 90m && notify-send 'timer is over'"
alias laser="timer 60m && notify-send 'timer is over'"
alias break="timer 10m && notify-send 'timer is over'"

# Starship prompt
eval "$(starship init zsh)"
export STARSHIP_CONFIG=~/.dotfiles/starship.toml

